{
	"compilerOptions": {
	  "target": "ES2022",
	  "module": "Node16",
	  "lib": ["ES2022"],
	  "rootDir": "./src",
	  "outDir": "./out",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "moduleResolution": "Node16",
	  "resolveJsonModule": true,
	  "types": ["node", "vscode", "mocha"],
	},
	"include": [
	  "src/**/*"
	],
	"exclude": [
	  "node_modules",
	  ".vscode",
	  "out"
	]
  }
  